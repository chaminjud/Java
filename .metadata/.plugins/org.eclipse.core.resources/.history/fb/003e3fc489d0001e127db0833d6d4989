package Sec001;

import java.util.Scanner;

public class ApplicationExam {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		Application drink = new Application(); 
		
		drink.setCola("콜라");
		drink.setCider("사이다");
		drink.setCoffee("냉커피");
		drink.setWhiba("미에로화이바");
		drink.setColacount(5);
		drink.setCidercount(5);
		drink.setCoffeecount(5);
		drink.setWhibacount(5);
		
		System.out.println("금액을 입력하세요");
		
		int money = sc.nextInt();
		boolean r = true;
		while(r) {
			System.out.println(money + "원");
			System.out.println("음료수를 선택하세요");
			System.out.println("1번: " + drink.getCola() +"    갯수" + drink.getColacount());
			System.out.println("2번: " +drink.getCider()+ "    갯수" + drink.getColacount());
			System.out.println("3번: " +drink.getCoffee()+"    갯수" + drink.getColacount());
			System.out.println("4번: " +drink.getWhiba()+ "    갯수" + drink.getColacount());
			int number = sc.nextInt();
			
			switch(number) {
			case 1:
				System.out.println("콜라를 선택");
				return;
			}
		}
		
		
		
		
		

	}

}
