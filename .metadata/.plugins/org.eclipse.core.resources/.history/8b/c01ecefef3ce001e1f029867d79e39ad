package Sec10;

public class CalExam {

	public static void main(String[] args) {
		
		//클래스에 소속된 필드명을 바로 사용하여 바로 사용 가능하다.
		double result = 10 * 10 * Calculator.pi;
		System.out.println("반지름이 10인 원의 원주율은" + result + "입니다.");
		//정적메서드는 클래스명.메서드의 이름 으로 바로 사용 가능하다.
		int result2 = Calculator.plus(10,5);
		int result3 = Calculator.minus(10,5);
		
		//정적메서드가 아니면 이렇게 생성자를 생성한 뒤에 변수.메서드를 사용한다
		Calculator Cal = new Calculator();
		int result4 = Cal.multiply(10, 5);
		int result5 = Cal.minus(10, 5);
		
		System.out.println(result2);
		System.out.println(result3);
		System.out.println(result4);
		System.out.println(result5);

	}

}
