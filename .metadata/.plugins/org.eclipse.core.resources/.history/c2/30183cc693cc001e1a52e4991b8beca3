package Sec05;

public class Student {

	//필드 - 객체의 데이터가 저장되는 곳
	int age =19;
	String name ="철수";
	int grade = 4;
	
	
	//생성자 Student(){} - 객체 생성 시 초기화 역할 담당 , 생략가능(알아서 만들어줌)
	
	
	//메서드 - 객체의 동작으로 호출 시 실행되는 곳
	public void study() {
		System.out.println("수업시간엔 공부함");
	}
	public void Home() {
		System.out.println("수업이 끝나면 집에 감");
	}
	

	
}




// java sec05.student
