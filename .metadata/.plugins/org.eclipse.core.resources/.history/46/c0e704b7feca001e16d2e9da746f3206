package Sec08;

public class AdvanceForExam {

	public static void main(String[] args) {
		
		int[] scores = {95, 71, 35, 69, 77, 88, 20};
		
		// 이 배열의 전체 합을 향상된 for문을 이용하여 구하라
		// 그리고 평균도 구하라

		
		int plus = 0;
		for(int num : scores) {
			plus += num;
			
		}
		
		System.out.println(plus);
		
		double Avg = (double) plus / scores.length;
		System.out.println(Avg);
		
	}
	

}

