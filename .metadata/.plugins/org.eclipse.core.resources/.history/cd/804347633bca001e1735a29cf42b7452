package Sec06;

public class ArrayCreate3Exam {

	public static void main(String[] args) {
		
		//배열 선언과 생성
		int[] arr1 = new int[3];
		
		//초기값을 세팅됨
        for(int i =0; i<3; i ++) {
        	System.out.print(arr1[i]+",");
        }
        System.out.println();
        arr1[0] = 20;
        arr1[1] = 40;
        for(int i =0; i<3; i ++) {
        	System.out.print(arr1[i]+ ",");
        }
        System.out.println();
        
        double[] arr2 = new double[3];
        
        for(int i =0; i<3; i ++) {
        	System.out.print(arr2[i]+",");
        }
        System.out.println();
        
        arr2[0] = 20;
        arr2[1] = 40;
        for(int i =0; i<3; i ++) {
        	System.out.print(arr2[i]+",");
        }
        System.out.println();
        
        String[] arr3 = new String[4];
        
        for(int i =0; i<4; i ++) {
        	System.out.print(arr3[i]+",");
        }
        System.out.println();
        
        arr3[0] = "10";
        arr3[1] = "20";
        arr3[2] = "30";
        for(int i =0; i<4; i ++) {
        	System.out.print(arr3[i]+",");
        }
        System.out.println();
        
        boolean[] arr4 = new boolean[3];
        
        for(int i =0; i<3; i ++) {
        	System.out.print(arr4[i]+",");
        }
        System.out.println();
        
        arr4[0] = true;
	}

}
