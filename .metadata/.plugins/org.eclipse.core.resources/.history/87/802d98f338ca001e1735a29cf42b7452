package Sec06;

public class ArrayCreate2Exam {

	public static void main(String[] args) {
		
		//배열 변수만 선언
		int[] scores;
		
		//배열 변수에 국어,영어,수학 점수를 대입
		
		scores = new int[]{90,95,94};
		int sum = 0;
		for(int i =0; i< scores.length; i++) {
			sum += scores[i];
		}
		System.out.println(sum);
		

	}

}
